# .coveragerc to configure coverage.py for pytest-cov

[run]
# Enable parallel mode to support multiprocessing
parallel = true
source = src

[report]
# Fail the build if total coverage is below 85%
fail_under = 85

# Show line numbers of statements that were not executed
show_missing = true

# Exclude lines that are typically not tested
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    if self\.debug:
    if __name__ == .__main__.:

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

[html]
directory = htmlcov
