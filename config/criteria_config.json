{
  "criteria": [
    {
      "name": "file_integrity",
      "type": "required",
      "description": "Check if the file can be opened",
      "threshold": null,
      "aggregate_mode": "all_pass"
    },
    {
      "name": "resolution",
      "type": "required",
      "description": "Minimum resolution",
      "threshold": {
        "min_dpi": 150,
        "min_width": 800,
        "tolerance_dpi": 5,
        "tolerance_width": 50
      },
      "aggregate_mode": "avg"
    },
    {
      "name": "brightness",
      "type": "required",
      "description": "Brightness and contrast",
      "threshold": { "min": 50, "max": 250, "min_contrast": 20 },
      "aggregate_mode": "avg"
    },
    {
      "name": "blur",
      "type": "required",
      "description": "Blur",
      "threshold": { "min_variance": 50 },
      "aggregate_mode": "min"
    },
    {
      "name": "skew",
      "type": "recommended",
      "description": "Skew",
      "threshold": { "max_deg": 5 },
      "aggregate_mode": "max"
    },
    {
      "name": "text_density",
      "type": "recommended",
      "description": "Text density",
      "threshold": { "min_percent": 5, "max_percent": 80 },
      "aggregate_mode": "avg"
    },
    {
      "name": "noise",
      "type": "recommended",
      "description": "Background noise",
      "threshold": { "max_percent": 10 },
      "aggregate_mode": "max"
    },
    {
      "name": "watermark",
      "type": "warning",
      "description": "Watermark interference",
      "threshold": { "max_overlap": 10 },
      "aggregate_mode": "max"
    },
    {
      "name": "compression",
      "type": "warning",
      "description": "Compression artifact",
      "threshold": { "min_entropy": 3.0 },
      "aggregate_mode": "min"
    },
    {
      "name": "missing_pages",
      "type": "warning",
      "description": "Missing pages",
      "threshold": { "min_content_ratio": 70 },
      "aggregate_mode": "min"
    }
  ]
}
